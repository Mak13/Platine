<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#3b3b3b" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip" >

        <!-- View Title Label -->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dip"
            android:layout_weight="1"
            android:text="@string/monProfil"
            android:textColor="#FFF"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Pseudo TextField -->


        <!-- Password TextField -->


        <!-- RememberMe Button -->


        <!-- login Button -->


        <!-- Link to Register Screen Button -->

        <TextView
            android:id="@+id/pseudo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="@string/pseudo"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="@string/email"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/adresse"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="@string/Adresse"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/sports"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/sports"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/sport1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sport1" />

            <TextView
                android:id="@+id/sport2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sport2" />

            <TextView
                android:id="@+id/sport3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sport3" />

            <TextView
                android:id="@+id/sport4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sport4" />
        </LinearLayout>

        <TextView
            android:id="@+id/plagehoraire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/plagehoraire"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/PlageHoraire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="plagehoraire" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/rayongeographique"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/rayongeographique"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="rayongeographique" />

        <CheckedTextView
            android:id="@+id/btnLinkToEditProfilScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text="@string/btnLinkToEditProfilScreen" />

    </LinearLayout>

</ScrollView>
